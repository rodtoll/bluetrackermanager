<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>SystemServiceServlet</servlet-name>
        <servlet-class>com.google.api.server.spi.SystemServiceServlet</servlet-class>
        <init-param>
            <param-name>services</param-name>
            <param-value>com.troublex3.trackermanager.TrackerNodeEndpoint,com.troublex3.trackermanager.TrackerDeviceEndpoint</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>trackerchartdatasource</servlet-name>
        <servlet-class>com.troublex3.trackermanager.TrackerChartDataSource</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>trackercharthistorydatasource</servlet-name>
        <servlet-class>com.troublex3.trackermanager.TrackerChartHistoryDataSource</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>trackersmshandler</servlet-name>
        <servlet-class>com.troublex3.trackermanager.TrackerSmsEndpoint</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SystemServiceServlet</servlet-name>
        <url-pattern>/_ah/spi/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>trackerchartdatasource</servlet-name>
        <url-pattern>/chartdata</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>trackersmshandler</servlet-name>
        <url-pattern>/sms</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>trackercharthistorydatasource</servlet-name>
        <url-pattern>/charthistorydata</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>